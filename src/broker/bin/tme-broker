#!/bin/bash
# chkconfig: 345 99 1
# description: TME Broker

source /opt/trend/tme/bin/daemon.sh

RETVAL=0
progname="tme-broker"
progpath=/opt/trend/tme/bin/broker.sh
user="TME"

piddir="/var/run/tme"
logdir="/var/log/tme"
pidfile="$piddir/$progname.pid"
lockfile="/var/lock/subsys/$progname"

case "$1" in
start)
    start
    ;;
stop)
    stop
    ;;
restart)
    stop
    start
    ;;
status)
    status
    ;;
*)
    echo "Usage: $0 {start|stop|restart|status}"
    ;;
esac

exit $RETVAL
