$("#rrdmodal > .modal-header > h5").empty().append("<%= params[:name] %>")
$("#rrdmodal > .modal-body")
    .empty()
    .append("<ul id=\"metric_list\"><% @metrics.each do |k,v| %><li><%= escape_html k %>: <%= escape_html v %></li><% end %></ul>")
    .append("<img class=rrd src='/images/<%= File.basename(@file) %>.raw.png?<%= Time.now.to_i %>'>")
    .append("<img class=rrd src='/images/<%= File.basename(@file) %>.size.png?<%= Time.now.to_i %>'>")
    .append("<img class=rrd src='/images/<%= File.basename(@file) %>.source.png?<%= Time.now.to_i %>'>")
    .append("<input type=button value=\"10 Minutes\" onclick=\"setRange('<%= params[:name] %>', '10.minutes')\">&nbsp;")
    .append("<input type=button value=\"1 Hour\" onclick=\"setRange('<%= params[:name] %>', '1.hour')\">&nbsp;")
    .append("<input type=button value=\"1 Day\" onclick=\"setRange('<%= params[:name] %>', '1.day')\">&nbsp;")
    .append("<input type=button value=\"1 Week\" onclick=\"setRange('<%= params[:name] %>', '1.week')\">&nbsp;")
    .append("<input type=button value=\"1 Month\" onclick=\"setRange('<%= params[:name] %>', '1.month')\">&nbsp;")
$("#metric_list")
    .append("<li>Consumer Hosts: <%= escape_html @consumers %></li>")
    .append("<li>Producer Hosts: <%= escape_html @producers %></li>")
$("#rrdmodal").css("max-height", window.innerHeight - 90 + "px")
$("#rrdmodal").css("top", "350px")
