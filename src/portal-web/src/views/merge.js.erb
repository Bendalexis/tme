$("#rrdmodal > .modal-body")
    .empty()
    .append("<% @imgs.each do |img| %><img class=rrd src='/images/<%= escape_html img %>?<%= Time.now.to_i %>'><% end %>")
    .append("Selected exchanges: <%= escape_html @params[:selected] %><br><br>")
    .append("<input type=button value=\"10 Minutes\" onclick=\"setMergeRange('<%= params[:name] %>', '10.minutes')\">&nbsp;")
    .append("<input type=button value=\"1 Hour\" onclick=\"setMergeRange('<%= params[:name] %>', '1.hour')\">&nbsp;")
    .append("<input type=button value=\"1 Day\" onclick=\"setMergeRange('<%= params[:name] %>', '1.day')\">&nbsp;")
    .append("<input type=button value=\"1 Week\" onclick=\"setMergeRange('<%= params[:name] %>', '1.week')\">&nbsp;")
    .append("<input type=button value=\"1 Month\" onclick=\"setMergeRange('<%= params[:name] %>', '1.month')\">&nbsp;")
$("#rrdmodal").css("max-height", window.innerHeight - 90 + "px")
$("#rrdmodal").css("top", "350px")
